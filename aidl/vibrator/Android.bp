    name: "android.hardware.vibrator-service.light",
    relative_install_path: "hw",
    init_rc: ["vibrator-light.rc"],
    vintf_fragments: ["vibrator-light.xml"],
    vendor: true,
    shared_libs: [
        "libbase",
        "libbinder_ndk",
        "android.hardware.vibrator-V2-ndk",
    ],
    static_libs: [
        "android.hardware.vibrator-impl.light",
    ],
    srcs: ["main.cpp"],
}
